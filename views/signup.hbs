<div class="bg_image">
    <div class="signup_card">

        <!-- logo signup -->
        <img class="logo center mt-3 mb-3 w-100" src="/images/netowledge-logo-black.png">

        <!-- signup form -->
        <form action="/auth/signup" method="post">
            <div class="mb-3">
                <label class="form-label mb-0">Your Full Name</label>
                <input type="text" class="form-control" required name="name">
            </div>
            <div class="mb-3">
                <label class="form-label mb-0">Profile Picture</label>
                <input type="url" class="form-control" placeholder="http://..." name="avatar">
            </div>
            <div class="mb-3">
                <label class="form-label mb-0">Email</label>
                <input type="email" class="form-control" required name="email">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label mb-0" name="password">Password</label>
                <input type="password" class="form-control" required name="password">
            </div>
            <div class="mb-3">
                <button class="btn btn-success mt-2" type="login">Signup</button>
            </div>
        </form>

        <!-- sign in -->
        <small>Already have an account?</small>
        <a href="./login">Login</a>

    </div>
</div>