<form class="" action="/thunders/create" method="post">
	<input
		type="text"
		name="comment"
		placeholder="Launch a Thunder here..."
		value=""
		class="thunder"
	/>
	<!-- range slider -->
	<div class="slidecontainer">
		<input
			type="range"
			min="-3"
			max="3"
			value="0"
			class="slider"
			id="myRange"
			name="trust_rate"
		/>
	</div>
	<!-- <button type="button" name="button" class="thunderButton"> Thunderize! <i class="fa-solid fa-poo-storm"></i> </button> -->
	<!-- button with animation -->
	<button class="btnThunderize">
		 <svg width="100px" height="30px" viewBox="0 0 100 30" class="border">
			 <polyline points="99,1 99,29 1,29 1,1 99,1" class="bg-line" />
			 <polyline points="99,1 99,29 1,29 1,1 99,1" class="hl-line" />
		 </svg>
		<span>Thunderize!</span>
	</button>
	<input type="hidden" value={{storm._id}} name="storm">
</form>
