
<div class="card border-top-0 mb-3 border-end-0 border-start-0 shadowStormThunder">
	<ul class="nav nav-tabs nav-chart">
		<li class="nav-item stormOrThunderAuthorLabel">
			<label for="card-text" class="nav-link active d-grid">
                <div class="row">
                    <div class="col col-md-auto">
                        <img
                        src="{{storm.author.avatar}}"
                        class="img-fluid avatar avatar-sm mt-1 ms-2 col"
                        alt=""
                        />
                    </div>
                    <div class="col">
                        <div>{{storm.author.name}}</div>
                        <small>{{storm.create_date}}</small>
                    </div>
                </div>

            </label>
        </li>
				<li>
					{{>chart storm=storm}}
				</li>
    </ul>
    <div class="card-body border publishedStorm border-top-0 border-bottom-0">
			<!-- <img src="{{storm.author.avatar}}" class="img-fluid avatar avatar-sm mt-2 ms-4" alt="..." />
        <h5 class="card-title stormAuthor">{{storm.author.name}}</h5> -->
        <p class="card-text mt-2">
            {{storm.text}}
        </p>
        <!-- input text + range slider (write a thunder) -->
        {{>thunderize storm=storm}}
    </div>
</div>
{{#each storm.thunders as |thunder|}}
    {{>thunder thunder=thunder}}
{{/each}}
